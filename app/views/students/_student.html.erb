<div class=>
  <div class="card-body">
    <h2 class="card-title text-xl font-bold">Name: <%= student.name %></h2>
    <p class="text-gray-700">ID: <%= student.id %></p>
    <p class="text-gray-700">Grade: <%= student.grade %></p>
    <p class="text-gray-700">Classroom: <%= student.classroom_id %></p>
    <p class="text-gray-700">Student Email: <%= student.student_email_address %></p>
    <p class="text-gray-700">Parent Email: <%= student.parent_email_address %></p>

    <!-- Display the UID -->
<!--    <p class="text-gray-500 break-words">UID: <%#= student.uid %></p>-->
  </div>

  <!-- Small Clickable QR Code -->
  <figure class="p-5 flex justify-center">
    <%= link_to "#qr-modal", class: "cursor-pointer", data: { turbo_frame: "qr-modal" } do %>
      <%= generate_qr_code(@student.uid) %>
    <% end %>
  </figure>
</div>
