<h1 class="text-3xl font-bold text-center mb-6">Classrooms for Grade <%= @grade %></h1>

<div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
  <% @classrooms.each do |classroom| %>
    <div class="bg-white rounded-lg shadow-lg overflow-hidden cursor-pointer hover:shadow-2xl transition-shadow">
      <%= link_to classroom_path(classroom), class: "block p-6" do %>
        <h2 class="text-center text-2xl font-bold text-gray-700">Classroom <%= classroom.class_id %></h2>
      <% end %>

      <!-- Show students in the classroom -->
      <div class="p-4">
<!--        <h3 class="font-semibold">Students:</h3>-->
        <% if classroom.students.any? %>
<!--          <ul class="mt-2">-->
            <%# classroom.students.each do |student| %>
<!--              <li><%#= student.name %> (ID: <%#= student.id %>)</li>-->
            <%# end %>
<!--          </ul>-->
        <% else %>
          <p class="text-gray-500">No students in this classroom.</p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
